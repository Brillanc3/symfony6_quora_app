<div class="d-flex flex-column mr-20 align-items-center">
  <a href="{{ path(from ~ '_up', {id : id}) }}"><i class="fa-regular fa-thumbs-up {{ rating > 0 ? 'rating-up' : '' }}"></i></a> 
  <p
    {% if rating >= 0 %}
        class="rating-up"
    {% else %}
        class="rating-down"
    {% endif %}             
  >{{ rating }}</p>
  <a href="{{ path(from ~ '_down', {id : id}) }}"><i class="fa-regular fa-thumbs-down {{ rating < 0 ? 'rating-down' : '' }}"></i></a>
</div>
