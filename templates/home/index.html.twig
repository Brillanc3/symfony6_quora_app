{% extends 'base.html.twig' %}

{% block title %}Hello HomeController!{% endblock %}

{% block body %}
    <ul>
        {% for question in questions %}
            <div class="block block-shadow d-flex flex-row mb-20">
                {% include "partials/_voteHandler.html.twig" with { rating : question.ratting, from : 'question', id : question.id} %}
                <a href=" {{ path('question_show', {id : question.id}) }} "  class="flex-fill d-flex flex-column">
                    <div class="mb-20 question-content pb-20">
                        <h3 class="mb-20">{{question.title}}</h3>
                        <p>{{question.content}}</p>
                    </div>
                    <div class="d-flex flex-row justify-content-between">
                        <div class="d-flex flex-row align-items-center">
                            <img class="avatar mr-20" src="{{ asset('images/avatars/' ~ question.user.avatar) }}" alt="Profile picture">
                            <p>Demand√© par <span id="user" class="clickable">{{ question.user.pseudonyme }}</span> le {{question.createdAt | date('d/mY') }}</p>
                        </div>
                        <div class="d-flex flex-row align-items-center">
                            <i class="fas fa-comment mr-20"></i>
                            <p>{{question.nbResponse}}</p>
                        </div>
                    </div>
                </a>
            </div>
        {% endfor %}
    </ul>
{% endblock %}