{% extends 'base.html.twig' %}

{% block title %}
  Se connecter
{% endblock %}

{% block body %}
  <form method="post">

    <div class="block mb-20">
      <h1 class="mb-20 text-center">Cr√©er son compte</h1>
      <div class="separator"></div>
    {% if error %}
      <div class="text-center">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
      <div class="separator"></div>
    {% endif %}

      <div class="form-row">
        <label for="_username">{{ form_label(form.pseudonyme) }}</label>
        <input type="text" name="_username" id="username" />
      </div>

        <div class="form-row">
            <label for="_password">{{ form_label(form.password) }}</label>
            <input type="password" name="_password" id="password" />
        </div>

      <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}" />
      <button type="submit" class="btn btn-primary">Se connecter</button>
    </div>
  </form>
{% endblock %}
